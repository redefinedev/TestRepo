          <param name="filterSourceBranch" value="+:*" />
          <param name="filterTargetBranch" value="pytest_for_teamcity" />
          <param name="providerType" value="github" />
          <param name="secure:accessToken" value="credentialsJSON:1babc779-b085-49c5-997e-69f0899f2cae" />
